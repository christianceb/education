<%= form_with( model: [ @classis, @classis.comments.build ], local: true) do |form| %>
  <h2>Leave a comment on this class:</h2>
  
  <div class='form-group'>
    <%= form.label :rating %>
    <%= form.select( :rating, options_for_select([['Excellent - 5', 5], ['Very Good - 4', 4], ['Good - 3', 3], ['Fair - 2', 2], ['Bad - 1', 1]]), { :prompt => :select }, { :class => 'form-control' } ) %>
  </div>
  
  <div class='form-group'>
    <%= form.label :commenter_name %>
    <%= form.text_field :commenter, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control' %>
  </div>

  <%= form.submit nil, { class: 'btn btn-primary', role: :button } %>
<% end %>