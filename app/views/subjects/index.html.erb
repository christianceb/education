<div class="row">
  <div class="col-xs-12">
    <h1>Subjects</h1>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <%= link_to 'New Subject', new_subject_path, class: 'btn btn-primary', role: :button %>
    <%= link_to 'New Class', new_classis_path, class: 'btn btn-primary', role: :button %>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <table class='table'>
        <tr>
          <th>Subject Name</th>
          <th>No. of Teachers</th>
          <th colspan='3'></th>
        </tr>
      
        <% @subjects.each do |subject| %>
          <tr>
            <td><%= subject.title %></td>
            <td><%= teachers_count( subject ) %></td>
            <td><%= link_to 'View', subject_path( subject ), class: 'btn btn-info', role: :button %></td>
            <td><%= link_to 'Edit', edit_subject_path( subject ), class: 'btn btn-warning', role: :button %></td>
            <td><%= link_to 'Delete', subject_path( subject ), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger', role: :button %></td>
          </tr>
        <% end %>
      </table>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <%= link_to 'Back to Home', root_path, class: 'btn btn-primary', role: :button %>
  </div>
</div>