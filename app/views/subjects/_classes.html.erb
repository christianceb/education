<% if @classes.any? %>
  <h2>Professors teaching this subject:</h2>
  
  <div class='row professors'>
    <% @classes.each do |classis| %>
      <div class='col-xs-12 col-lg-4 professor'>
        <h3><%= classis.name %></h3>

        <div class='rating'>
          <% average_rating = average_rating( classis ) %>
          <% if average_rating.present? %>
            <p>Rating: <%= average_rating %> / 5.0 (<%= literal_rating( average_rating ) %>)</p>
          <% else %>
            <p><em>No ratings to show</em></p>
          <% end %>

        </div>
  
        <%= link_to 'View Class', classis_path( classis ), class: 'btn btn-primary', role: :button %>
        <%= link_to 'Delete Class', classis_path( classis ), method: :delete, data: { confirm: 'Are you sure you want to delete this class? (comments to this class will be deleted too)' }, class: 'btn btn-danger', role: :button %>
      </div>
    <% end %>
  </div>
<% else %>
  <em>No professors teaching this subject.</em>
<% end %>