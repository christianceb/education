<div class="row">
  <div class="col-xs-12">
    <h1>Professors</h1>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <%= link_to 'Home', root_path, class: 'btn btn-primary', role: :button %>
    <%= link_to 'New Professor', new_professor_path, class: 'btn btn-primary', role: :button%>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">

  <table class="table">
    <tr>
      <th>Professor Name</th>
      <th>No. of Subjects Teached</th>
      <th colspan='3'></th>
    </tr>
    <% @professors.each do |professor| %>
      <tr>
        <td><%= professor.name %></td>
        <td><%= subjects_count( professor ) %></td>
        <td><%= link_to 'View', professor_path(professor), class: 'btn btn-info', role: :button %></td>
        <td><%= link_to 'Edit', edit_professor_path(professor), class: 'btn btn-warning', role: :button %></td>
        <td><%= link_to 'Delete', professor_path(professor), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger', role: :button %></td>
      </tr>
    <% end %>
  </table>
  </div>
</div>